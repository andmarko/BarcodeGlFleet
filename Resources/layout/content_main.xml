<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">
    <TextView
        android:text="Scan Item Barcode"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="30dp"
        android:textSize="22dp"
        android:textColor="#ed9f32"
        android:background="#000"
        android:paddingTop="1dp"
        android:id="@+id/mainTitle"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="Barcode"/>
    <EditText
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:textSize="23dp"
        android:background="#E1DFDD"
        android:layout_marginLeft="20dp"
        android:id="@+id/textItemScan"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="Item"
        android:id="@+id/textView2" />
    <EditText
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:textSize="23dp"
        android:background="#E1DFDD"
        android:id="@+id/textItemNum"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:paddingTop="11dp"
        android:textSize="13dp"
        android:layout_marginTop="-71dp"
        android:layout_marginLeft="200dp"
        android:text="Brand"/>
    <EditText
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:textSize="23dp"
        android:layout_marginLeft="200dp"
        android:background="#E1DFDD"
        android:id="@+id/textBrand"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:paddingTop="5dp"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:text="Description"/>
    <EditText
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:textSize="23dp"
        android:background="#E1DFDD"
        android:layout_marginLeft="20dp"
        android:id="@+id/textItemDescr"/>
    <TextView
        android:layout_width="370dp"
        android:layout_height="22dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:text="Note"/>
    <EditText
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:textSize="23dp"
        android:background="#E1DFDD"
        android:layout_marginLeft="20dp"
        android:id="@+id/textNote"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:textSize="15dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Enter Qty"/>
    <EditText
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:textSize="23dp"
        android:inputType="phone"
        android:background="#E1DFDD"
        android:layout_marginLeft="20dp"
        android:id="@+id/textQty"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:id="@+id/titleTruck"
        android:text="Truck"/>
    <EditText
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:textSize="23dp"
        android:inputType="phone"
        android:background="#E1DFDD"
        android:layout_marginLeft="20dp"
        android:id="@+id/textTruck"/>
    <Button
        android:text="Cancel"
        android:layout_width="300px"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:backgroundTint="#5b5b5b"
        android:textColor="#fff"
        android:textSize="21sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btnCancel"/>
    <Button
        android:text="Submit"
        android:layout_width="300px"
        android:layout_marginTop="-50dp"
        android:layout_height="50dp"
        android:backgroundTint="#33658a"
        android:textColor="#fff"
        android:textSize="21sp"
        android:layout_marginLeft="200dp"
        android:id="@+id/btnSubmit"/>
</LinearLayout>

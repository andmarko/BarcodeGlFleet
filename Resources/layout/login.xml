<?xml version="1.0" encoding="utf-8" ?> 
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"   
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">      
        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:text="GL Fleet Depot"
                android:layout_width="380dp"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:textSize="23dp"
                android:textColor="#ed9f32"
                android:background="#000"
                android:paddingTop="5dp"
                android:id="@+id/loginTitle"/>
        </LinearLayout>
        <EditText
            android:id="@+id/emplNum"
            android:inputType="phone"
            android:layout_marginTop="80dp"           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employee Number"
            android:textSize="26sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="35px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/radioGroup1">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Tires"
                android:id="@+id/radioTires"
                android:layout_marginLeft="15dp"
                android:textSize="26sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parts"
                android:layout_marginLeft="60dp"
                android:id="@+id/radioParts"
                android:textSize="26sp"/>
        </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">           
            <Button
               android:text="ADD ITEM"
               android:layout_width="300px"
               android:layout_height="wrap_content"
               android:backgroundTint="#33658a"
               android:textColor="#fff"
               android:layout_marginLeft="15dp"
               android:textSize="23sp"
               android:id="@+id/btnAdd"/>
            <Button
               android:text="OUT ITEM"
               android:layout_width="300px"
               android:layout_height="wrap_content"
               android:backgroundTint="#f06666"
               android:textColor="#fff"
               android:textSize="23sp"
               android:layout_marginLeft="30dp"
               android:id="@+id/btnOut"/>
        </LinearLayout> 
     <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>